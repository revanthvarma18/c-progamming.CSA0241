#include<stdio.h>
int main()
{
	int n,i,j;
	printf("Enter the value of n= ");
	scanf("%d",&n);
	if(n>0 && n%1==0)
	{
		for(i=1;i<=n;i++)
		{
			for(j=i;j<=n;j++)
			{
				printf(" ");
			}
			for(j=i;j>=1;j--)
			{
				printf(" %d",j);
			}
			printf("\n");
		}
    }
    else 
    {
    	printf("Invalid input");
     }
     return 0;
     }
